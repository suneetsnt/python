
Studentdetails = []


def Students():
     name = input("Enter name: ") 
     sid = int(input("Enter user id: "))
     cid = input("Enter courseid: ")
     Studentdetail=[name,sid,cid]
        
    
     if len(str(sid))<9 and len(cid)==7:
            Studentdetails.append(Studentdetail)
            
     
     return Studentdetails
     
print(Students())

adds=input("Press 1 to add new users and Press 0 to exit")
while (adds=="1"):
    print(Students())
    adds=input("Press 1 to add new users and Press 0 to exit")
