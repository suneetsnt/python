studentdetails=[]
details= []
studentid = []
courseid = []

def Students():
    name = input("Enter name: ")
    
    sid = int(input("Enter user id: "))
    while len(str(sid))>9:
        sid = int(input("Enter user id: "))
    cid = input("Enter courseid: ")
    while len(str(cid))>7:
        cid = input("Enter courseid: ")
            
    studentdetails=[sid, name, cid]
    details.append(studentdetails)

    return details.sort()
     

adds=input("Press 1 to add new users and Press 0 to exit")
while (adds=="1"):
    Students()
    adds=input("Press 1 to add new users and Press 0 to exit")
print(f'{details}')




